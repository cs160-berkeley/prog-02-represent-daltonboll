<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="cs160.represent.CandidateInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@mail.com"
            android:id="@+id/candidateEmail"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="#51b7e3"
            android:paddingTop="5dp"
            android:autoLink="email"
            android:textColorLink="#51b7e3"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mywebsite.com"
            android:id="@+id/candidateWebsite"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="#51b7e3"
            android:paddingTop="5dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignStart="@+id/candidateEmail"
            android:autoLink="web"
            android:textColorLink="#51b7e3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@myTwitterName"
            android:id="@+id/candidateTwitterHandle"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="#51b7e3"
            android:paddingTop="5dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignStart="@+id/candidateWebsite"
            android:textColorLink="#51b7e3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'This is my latest Tweet!'"
            android:id="@+id/candidateLatestTweet"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:layout_below="@+id/candidateTwitterHandle"
            android:layout_alignStart="@+id/candidateTwitterHandle" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/email_icon"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/candidateContactHeading"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/link_icon"
            android:layout_below="@+id/candidateEmail"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:src="@drawable/twitter_icon"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/imageView4"
            android:layout_marginTop="15dp"
            android:background="#273b56"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hillary Clinton"
            android:id="@+id/candidateName"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Democrat | Representative"
            android:id="@+id/candidatePartyInfo"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/candidateName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/candidateImage"
            android:src="@drawable/donald_round"
            android:layout_below="@+id/candidatePartyInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Committees:"
            android:id="@+id/candidateCommitteeHeading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/bar2"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Example Committee"
            android:id="@+id/candidateCommittees"
            android:layout_below="@+id/candidateCommitteeHeading"
            android:layout_alignStart="@+id/candidateCommitteeHeading"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsored Bills:"
            android:id="@+id/candidateBillsHeading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/bar3"
            android:layout_alignStart="@+id/candidateCommittees"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Example Bill (11/12/16)"
            android:id="@+id/candidateSponsoredBills"
            android:textSize="18sp"
            android:layout_below="@+id/candidateBillsHeading"
            android:layout_alignStart="@+id/candidateBillsHeading"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving until 11/20/16"
            android:id="@+id/servingUntil"
            android:layout_below="@+id/candidateImage"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Hillary:"
            android:id="@+id/candidateContactHeading"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignTop="@+id/bar"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/bar"
            android:layout_below="@+id/servingUntil"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/bar2"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/candidateLatestTweet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/bar3"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/candidateCommittees"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
</ScrollView>