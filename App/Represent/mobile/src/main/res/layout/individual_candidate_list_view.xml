<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@mail.com"
        android:id="@+id/candidateEmail"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:textColor="#51b7e3"
        android:paddingTop="5dp"
        android:layout_below="@+id/candidateImage"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mywebsite.com"
        android:id="@+id/candidateWebsite"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="#51b7e3"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/candidateEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@myTwitterName"
        android:id="@+id/candidateTwitterHandle"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:textColor="#51b7e3"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/candidateWebsite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'This is my latest Tweet!'"
        android:id="@+id/candidateLatestTweet"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:layout_below="@+id/candidateTwitterHandle"
        android:layout_alignStart="@+id/candidateTwitterHandle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        android:id="@+id/moreInfoButton"
        android:layout_below="@+id/candidateLatestTweet"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:src="@drawable/email_icon"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/candidateImage"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:src="@drawable/link_icon"
        android:layout_below="@+id/candidateEmail"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/twitter_icon"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/imageView4"
        android:layout_marginTop="15dp"
        android:background="#273b56"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hillary Clinton"
        android:id="@+id/candidateName"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Democrat | Representative"
        android:id="@+id/candidatePartyInfo"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/candidateName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/candidateImage"
        android:src="@drawable/donald_round"
        android:layout_below="@+id/candidatePartyInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />
</RelativeLayout>
